<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CalcResStyle" parent="CalcBtnStyle">
        <item name="backgroundTint">@color/teal_200</item>
    </style>

    <style name="CalcBtnStyleLight" parent="CalcResStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="CalcBtnStyleDark" parent="CalcBtnStyle">
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="CalcResStyleDark" parent="CalcResStyle">
        <item name="backgroundTint">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>