<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/calc_background"
        android:scaleType="centerCrop"
        android:src="@drawable/brain" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="@integer/column_count"
        android:useDefaultMargins="true"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/text_result"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:background="@color/teal_200"
            android:gravity="end"
            android:text="@string/default_result_text"
            style="@style/CalcResStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            android:text="@string/btn_clear"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_division"
            android:text="@string/btn_division"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:text="@string/btn_1"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            android:text="@string/btn_2"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            android:text="@string/btn_3"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiplication"
            android:text="@string/btn_multiplication"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            android:text="@string/btn_4"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            android:text="@string/btn_5"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            android:text="@string/btn_6"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            android:text="@string/btn_minus"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            android:text="@string/btn_7"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            android:text="@string/btn_8"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            android:text="@string/btn_9"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            android:text="@string/btn_plus"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="@string/btn_0"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            android:text="@string/btn_dot"
            style="@style/CalcBtnStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_res"
            android:text="@string/btn_result"
            style="@style/CalcBtnStyle" />

    </GridLayout>
</FrameLayout>