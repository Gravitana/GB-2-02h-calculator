<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/cardview_dark_background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/calc_background" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="@integer/column_count"
        android:useDefaultMargins="true"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/text_result"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:background="@color/teal_200"
            android:gravity="end"
            android:paddingHorizontal="@dimen/result_padding_h"
            android:paddingVertical="@dimen/result_padding_v"
            android:text="@string/default_result_text"
            style="@style/CalcResStyleDark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            android:text="@string/btn_clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_division"
            android:text="@string/btn_division" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiplication"
            android:text="@string/btn_multiplication" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:text="@string/btn_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            android:text="@string/btn_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            android:text="@string/btn_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            android:text="@string/btn_minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            android:text="@string/btn_plus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            android:text="@string/btn_4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            android:text="@string/btn_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            android:text="@string/btn_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            android:text="@string/btn_dot" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_res"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            android:text="@string/btn_result" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            android:text="@string/btn_7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            android:text="@string/btn_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            android:text="@string/btn_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            android:text="@string/btn_0" />

    </GridLayout>
</FrameLayout>